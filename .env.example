# ============================================
# BOTALERT - Railway Environment Variables
# ============================================
# Copy this to Railway dashboard as environment variables
# Railway auto-detects and prompts for these on deployment

# ============ SERVER CONFIG ============
PORT=5000
NODE_ENV=production

# ============ BINANCE API ============
# Required for trading - get from https://www.binance.com/en/my/settings/api-management
BINANCE_API_URL=https://fapi.binance.com
BINANCE_SPOT_API_URL=https://api.binance.com
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# ============ TRADING CONFIG ============
TRADING_ENABLED=false
RISK_PER_TRADE=5
MIN_CONFIDENCE=65
MAX_OPEN_POSITIONS=5
MAX_DAILY_TRADES=20
LEVERAGE=10

# ============ SYMBOL TRACKING ============
# Comma-separated list or "ALL" to auto-discover
SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT,BNBUSDT,XRPUSDT
MAX_SYMBOLS=25
POLL_MS=15000
POLL_INTERVALS=1m,5m,15m,1h,4h

# ============ WEB PUSH NOTIFICATIONS ============
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
PUSH_CONTACT=mailto:your@email.com

# ============ SPOT DCA ============
SPOT_DCA_ENABLED=false
SPOT_DCA_DRY_RUN=true
SPOT_DCA_INTERVAL=1h
SPOT_DCA_BUDGET=100

# ============ SENTIMENT & NEWS ============
# CryptoPanic API - https://cryptopanic.com/developers/api/
CRYPTOPANIC_API_KEY=your_cryptopanic_key

# LunarCrush API (optional) - https://lunarcrush.com/developers
LUNARCRUSH_API_KEY=your_lunarcrush_key

# News polling interval (ms)
NEWS_POLL_INTERVAL=300000

# ============ WHALE ALERTS ============
# Whale Alert API - https://whale-alert.io/
WHALE_ALERT_API_KEY=your_whale_alert_key

# Minimum transaction value to track (USD)
WHALE_MIN_VALUE_USD=1000000

# ============ FRONTEND ============
NEXT_PUBLIC_BACKEND_URL=https://your-app.railway.app
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key

# ============================================
# RAILWAY AUTO-CONFIG NOTES
# ============================================
# Railway will automatically set:
# - PORT (Railway assigns this)
# - RAILWAY_STATIC_URL (your app URL)
#
# Required variables (app won't work without):
# - BINANCE_API_KEY
# - BINANCE_API_SECRET
#
# Optional but recommended:
# - CRYPTOPANIC_API_KEY (for news)
# - WHALE_ALERT_API_KEY (for whale tracking)
# - VAPID keys (for push notifications)
#
# Free tier notes:
# - CryptoPanic free tier: 10 requests/minute
# - Fear & Greed Index: No API key needed (free)
# - Whale Alert free tier: 10 requests/minute
# - LunarCrush: Paid API (optional)
